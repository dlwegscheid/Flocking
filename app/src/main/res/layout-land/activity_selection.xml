<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/selectBird"
        android:id="@+id/Message"
        android:gravity="center_vertical|center_horizontal"
        android:layout_margin="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:baselineAligned="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:id="@+id/BananaSwallow">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/Swallow"
                android:layout_weight="1"
                android:layout_margin="10dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/swallow"
                    android:id="@+id/SwallowSelect"
                    android:layout_gravity="center_vertical|left" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/swallow"
                    android:src="@drawable/swallow"
                    android:contentDescription="@string/swallow"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:id="@+id/Bananaquit"
                android:layout_weight="1"
                android:layout_margin="10dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bananaquit"
                    android:id="@+id/SelectBanana"
                    android:layout_gravity="left|center_vertical" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/banana"
                    android:src="@drawable/bananaquit"
                    android:contentDescription="@string/bananaquit"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/Ostrich">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ostrich"
                android:src="@drawable/ostrich"
                android:contentDescription="@string/ostrich" />

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/ostrich"
                android:id="@+id/SelectOstrich" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/RobinParrot">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:id="@+id/Robin"
                android:layout_weight="1"
                android:layout_margin="10dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/SelectRobin"
                    android:text="@string/robin"
                    android:layout_gravity="center|left" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/robin"
                    android:src="@drawable/robin"
                    android:contentDescription="@string/robin"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="10dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:id="@+id/Parrot"
                android:layout_weight="1"
                android:layout_margin="10dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/parrot"
                    android:id="@+id/SelectParrot"
                    android:layout_gravity="center_vertical|left" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/parrot"
                    android:src="@drawable/parrot"
                    android:contentDescription="@string/parrot"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center|right" />
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>